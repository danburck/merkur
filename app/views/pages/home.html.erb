<div class="banner-home">
  <h1>Merkur<i class="fas fa-rocket"></i></h1>
  <p>beyond infinity</p>
  <div class="text-center">
<%= render 'shared/search-bar' %>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mt-4 mb-4 text-center">Discover the universe</h1>
    </div>
  </div>
  <div class="row">
    <% @bodies.sample(3).each do |body| %>
    <div class="col-lg-4 col-md-6 col-12 mb-3">
      <div class="card-category" style="
          background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(/assets/<%= body.image %>);
        ">
        <%= link_to body.name.capitalize, body_path(body), class: "stretched-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<!-- 1st Top destinations Banner (Mars) -->
<%= render 'shared/banner-mars' %>

