<div class="banner-small">
  <h1>Your next trip into space is only a few clicks away</h1>
</div>
<%= render 'shared/search-bar' %>
<div class="container">
	<form class="form-inline justify-content-center px-5">
  	<%= form_tag bodies_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control flex-grow-1",
        placeholder: "Discover new worlds"
        %>
      <%= submit_tag "Search", class: "btn btn-info" %>
    <% end %>
  </form>
	<div class="row">
		<div class="col-12">
		  <h1 class="mt-4 mb-4">Exact Match</h1>
		</div>
	</div>
	<div class="row">
		<% @body.each do |body| %>
			<div class="col-lg-4 col-md-6 col-12 mb-3">
				<div class="card-category" style="
          background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('<%= asset_path(body.image) %>');
        ">
					<%= link_to body.name.titleize, body_path(body), class: "stretched-link" %>
				</div>
			</div>
		<% end %>
	</div>
  <% if @body[0] %>
    <div class="row">
      <div class="col-12">
        <h1 class="mt-4 mb-4">Nearby Worlds</h1>
      </div>
    </div>
    <div class="row">
      <% @bodies.filter { |body| body.nearest_planet == @body[0].name }.first(9).each do |body| %>
        <div class="col-lg-4 col-md-6 col-12 mb-3">
          <div class="card-category" style="
          background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(/assets/<%= body.image %>);
          ">
            <%= link_to body.name.titleize, body_path(body), class: "stretched-link" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <%= "No matches" %>
  <% end %>
</div>
