<div class="banner-small" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('<%= asset_path('moon-min') %>')">
  <h1>Your next trip into space is only a few clicks away</h1>
</div>
<%= render 'shared/search-bar' %>
<div class="container">

	<div class="row">
		<div class="col-12">
		<h1 class="mt-4 mb-4 text-center">Discover New Worlds</h1>
		</div>
	</div>
	<div class="row">
		<% @bodies.each do |body| %>
			<div class="col-lg-4 col-md-6 col-12 mb-3">
				<div class="card-category" style="
          background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('<%= asset_path(body.image) %>');
        ">
					<%= link_to body.name.titleize, body_path(body), class: "stretched-link" %>
				</div>
			</div>
		<% end %>
	</div>
  <nav aria-label="Page navigation">
  <ul class="pagination justify-content-end">
    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item"><a class="page-link" href="#">Next</a></li>
  </ul>
</nav>
</div>
