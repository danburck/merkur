<div class="container-search-bar m-auto">
  <%= simple_form_for :search, url: bodies_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for world by name or closest planet"/>
    <button name="button" type="submit" class="btn btn-info text-right">
      <i class="fas fa-search"></i>
    </button>
  </div>
  <% end %>
</div>
