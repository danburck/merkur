<div class="banner-small">
  <h1>Here are your bookings</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-12">
    </div>
  </div>
  <div class="row">
    <% @trips.each do |trip| %>
      <div class="col-lg-4 col-md-6 col-12 mb-3">
        <div class="card card-trip">
          <%= image_tag trip.body.image, alt: "alttext", class: "card-img-top"%>
          <div class="card-body">
          <p class=" card-date mb-1"><%= "#{trip.departure_date} - #{trip.arrival_date}"%></p>
            <h5 class="card-title"><%= trip.body.name.capitalize %></h5>
            <%= link_to "", trip_path(trip), class: "stretched-link"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
