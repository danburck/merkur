<div class="banner-trip">
  <h1>Get ready for your next trip to
    <%= @trip.body.name %>! <i class="fas fa-rocket"></i></h1>
</div>
<div class="container align-items-center justify-content-center">
  <div class="d-flex flex-column align-items-center justify-content-center">
    <h2>Here are the details of your trip</h2>

    <ul>
      <li>Arrival date:
        <%= @trip.arrival_date %>
      </li>
      <li>Departure date:
        <%= @trip.departure_date %>
      </li>



      <% arrival_start = @trip.arrival_date %>
      <% departure_start = @trip.departure_date %>
      <% days_in_range = (arrival_start .. departure_start).count %>

      <% bodie_price = @trip.body.cost_per_day %>
      <% total_cost = bodie_price * days_in_range %>
      <%= total_cost %>

    </ul>
  </div>
</div>
